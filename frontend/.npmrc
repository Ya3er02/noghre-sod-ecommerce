# ============================================
# NPM/Bun Configuration for Frontend
# ============================================
# This file configures package manager behavior to handle
# peer dependency mismatches between React 19 and older packages

# Allow legacy peer dependencies (React 19 compatibility)
legacy-peer-deps=true

# Don't fail on peer dependency mismatches
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Use exact versions when installing
#save-exact=false

# Increase timeout for slow connections
#fetch-timeout=60000
