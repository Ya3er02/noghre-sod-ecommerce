# ============================================
# PRODUCTION ENVIRONMENT VARIABLES - EXAMPLE
# ============================================
# Copy this file to .env.production and fill with actual values
# DO NOT COMMIT .env.production WITH REAL SECRETS!

# Node Environment
NODE_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=4000

# Public URLs (Update with your server IP or domain)
FRONTEND_URL=http://YOUR_SERVER_IP
BACKEND_URL=http://YOUR_SERVER_IP/api

# Database Configuration (PostgreSQL in Docker)
# Generate strong password: openssl rand -base64 24
DATABASE_URL=postgresql://noghre_user:YOUR_POSTGRES_PASSWORD@postgres:5432/noghre_sod_db
POSTGRES_USER=noghre_user
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD
POSTGRES_DB=noghre_sod_db

# Redis Configuration (Redis in Docker)
# Generate strong password: openssl rand -base64 24
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Encore Configuration
ENCORE_APP_ID=noghre-sod-ecommerce-8e3i
ENCORE_RUNTIME_ENV=production

# Clerk Authentication
# Get these from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY_HERE
CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY_HERE
VITE_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY_HERE

# JWT & Security
# Generate strong secrets: openssl rand -base64 48
JWT_SECRET=YOUR_JWT_SECRET_HERE
SESSION_SECRET=YOUR_SESSION_SECRET_HERE

# Silver Price API (if you use one)
SILVER_PRICE_API_KEY=YOUR_API_KEY_HERE
SILVER_PRICE_API_URL=https://api.example.com/silver-price

# CORS Allowed Origins
CORS_ALLOWED_ORIGINS=http://YOUR_SERVER_IP,http://localhost:5173

# Logging
LOG_LEVEL=info

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
